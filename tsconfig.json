{
  "compilerOptions": {
    "target": "ES2020",
    "module": "None",
    "outFile": "./script.js",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "script.ts",
    "node_modules"
  ]
}